<div class="panel panel-primary">
  <!-- Default panel contents -->
  <div class="panel-heading">目標詳細</div>
  <div class="panel-body">
    <p id="notice"><%= notice %></p>
    <strong>ユーザー:</strong>
    <%= @user_log.user.name %>
  </div>

  <!-- List group -->
  <ul class="list-group">
    <li class="list-group-item list-group-item-info">
      <strong>目標の体重:</strong>
      <%= @user_log.weight %> kg
    </li>
    <li class="list-group-item list-group-item-info">
      <strong>コメント:</strong>
      <%= @user_log.comment %>
    </li>
  </ul>
  <div class="panel-footer">
    <div class="row">
        <div class="col-md-4 col-md-offset-8">
          <div class="btn-group btn-group-xs btn-group-justified" role="group" aria-label="...">
            <div class="btn-group" role="group">
              <%= link_to '編集', edit_user_log_path(@user_log), class: 'btn btn-primary' %>
            </div>
            <div class="btn-group" role="group">
              <%= link_to '戻る', user_logs_path, class: 'btn btn-success' %>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>